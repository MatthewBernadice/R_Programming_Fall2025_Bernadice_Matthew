#1.1
# choose file interactively 
#with read.table(file.choose(), ....)
student6 <- read.table("C:/Users/matth/OneDrive/Desktop/LIS4805 PreAnalytics/Assignment 6 Dataset.txt", header = TRUE,sep = ",", stringsAsFactors = FALSE)
student6 <- as.data.frame(student6)

#1.2
library(plyr)
gender_mean <- ddply(
  student6,
  "Sex",
  summarise,
  GradeAverage = mean(Grade, na.rm = TRUE)
)
gender_mean <- as.data.frame(gender_mean)

#1.3
write.table(
  gender_mean,
  file = "gender_mean.txt",
  sep  = "\t",
  row.names = FALSE
)

#2.1
i_students <- subset(
  student6,
  grepl("i", Name, ignore.case = TRUE)
)

#2.2
write.csv(
  i_students$Name,
  file      = "i_students.csv",
  row.names = FALSE,
  quote     = FALSE
)

#3
write.csv(
  i_students,
  file      = "i_students_full.csv",
  row.names = FALSE
)
